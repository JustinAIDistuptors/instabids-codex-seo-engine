# Application
NODE_ENV=development
PORT=3001
LOG_LEVEL=info
AGENT_CONCURRENCY=5

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=instabids_seo
DB_USER=postgres
DB_PASSWORD=postgres

# OpenAI API
OPENAI_API_KEY=your_openai_api_key

# Neo4j (Knowledge Graph)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j

# Pinecone (Vector DB for embeddings)
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX=instabids-embeddings

# GitHub API (for deployment)
GITHUB_TOKEN=your_github_token
GITHUB_OWNER=your_github_username
GITHUB_REPO=your_github_repo
GITHUB_BRANCH=main

# Vercel (for deployment)
VERCEL_TOKEN=your_vercel_token
VERCEL_PROJECT_ID=your_vercel_project_id
VERCEL_TEAM_ID=your_vercel_team_id

# SEO Tools
SERPAPI_KEY=your_serpapi_key
GOOGLE_SEARCH_CONSOLE_CLIENT_ID=your_gsc_client_id
GOOGLE_SEARCH_CONSOLE_CLIENT_SECRET=your_gsc_client_secret
GOOGLE_SEARCH_CONSOLE_REFRESH_TOKEN=your_gsc_refresh_token

# Content Generation Settings
MIN_CONTENT_LENGTH=1500
MAX_CONTENT_LENGTH=3000
DEFAULT_CONTENT_TEMPERATURE=0.7
ENABLE_LOCAL_LANDMARKS=true
ENABLE_IMAGE_GENERATION=true

# Task Scheduling
ENABLE_SCHEDULER=false
MAX_TASKS_PER_RUN=50
SCHEDULER_CRON_EXPRESSION="0 0 * * *"

# Monitoring
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
ALERTING_EMAIL=alerts@example.com
ENABLE_PERFORMANCE_TRACKING=true
PERFORMANCE_METRICS_RETENTION_DAYS=90

# Security
JWT_SECRET=your_jwt_secret_at_least_32_chars_long
SESSION_SECRET=your_session_secret_at_least_32_chars_long
COOKIE_SECRET=your_cookie_secret_at_least_32_chars_long
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
